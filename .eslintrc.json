{
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "env": {
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-use-before-define": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "no-restricted-syntax": 0,
    "no-plusplus": 0
  }
}
